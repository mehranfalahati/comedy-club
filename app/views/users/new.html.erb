<div class="image">



</div>


<div class="about">

    <img src="../../assets/logo.jpg" alt="comedy store logo">
    
    <div class="about-text">
        <h1>Why visit the Comedy Store</h1>

        <h3>[enter witty text] </h3>
    </div>
    
</div>
<div class="subscribe">

    <div>
        <h1>Subscribe!</h1>
        <h3>Be the first to know about all the sh*ts and gigs</h3>
        <p>No spam, we promise! All killer, no fill </p>

    </div>

    <div class="elephant">
        <img src="../../assets/elephant.png" alt="elephant balancing on ball comedy store">    
    </div>

    <div class="form">

        <%= form_for @user do |f| %>

            <%= f.text_field :first_name, :required => true, :placeholder => "First Name*" %>

            <%= f.text_field :last_name, :required => true, :placeholder => "Last Name*" %>

            <%= f.email_field :email, :required => true, :class => "email_output"%>
            
            <%= f.submit "Sign Up" %>

        <% end %>
    </div>

</div>


    <% if flash[:message].present? %>

    <div class="flash">
        <%= flash[:message] %>
    </div>

    <% end %>

    <% if @user.errors.any? %>

        <% @user.errors.full_messages.each do |msg| %>
            <p> <%= msg %> </p>
        <% end%>

    <% end %>

<div class="footer">
    <%= render :partial => 'footer'%>
</div>
